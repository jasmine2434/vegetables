<header>
  <nav>
    <nav class="navbar" style="background-color: #3cb371;">
      <span class="navbar-brand mb-0 h1">野菜と健康</span>

    <% if user_signed_in? %>
    <div class="text-center me-3" style="font-weight: 500;">
        こんにちは、<%= current_user.name %>さん
    </div>

    <div class="d-flex justify-content-center" style="font-weight: 400; text-align: left;">
      <div class="me-3">
        <p class="notice mb-0"><%= notice %></p>
      </div>
      <div>
        <p class="alert mb-0"><%= alert %></p>
      </div>
    </div>

    <div class="d-flex justify-content-end align-items-center" style="height: 60px">
      <ul class="navbar-nav" style="flex-direction: row;">
        <li>
          <%= link_to root_path, class:"nav-link text-light" do %>
            <button type="button" class="btn btn-outline-secondary mr-4" style="color: black; font-weight: 600; border-color: #d3d3d3;">トップページ</button>
          <% end %>
        </li>
        <li>
          <%= link_to about_path, class:"nav-link text-light" do %>
            <button type="button" class="btn btn-outline-secondary mr-4" style="color: black; font-weight: 600; border-color: #d3d3d3;">ご案内</button>
          <% end %>
        </li>
        <li>
          <%= link_to my_page_path(current_user.id) , class:"nav-link text-light" do %>
            <button type="button" class="btn btn-outline-secondary mr-4" style="color: black; font-weight: 600; border-color: #d3d3d3;">マイページ</button>
          <% end %>
        </li>
        <li>
          <%= link_to  vegetables_path , class:"nav-link text-light" do %>
            <button type="button" class="btn btn-outline-secondary mr-4" style="color: black; font-weight: 600; border-color: #d3d3d3;">投稿一覧</button>
          <% end %>
        </li>
        <li>
          <%= link_to destroy_user_session_path, method: :delete, class:"nav-link text-light" do%>
            <button type="button" class="btn btn-outline-secondary mr-5" style="color: black; font-weight: 600; border-color: #d3d3d3;">ログアウト</button>
          <% end %>
        </li>
      </ul>
    </div>

    <% elsif admin_signed_in? %>
    <div class="d-flex justify-content-end align-items-center">
      <ul class="navbar-nav" style="flex-direction: row;">
        <li>
          <%= link_to  root_path , class:"nav-link text-light" do %>
            <button type="button" class="btn btn-outline-secondary mr-4" style="color: black; font-weight: 600; border-color: #d3d3d3;">会員一覧</button>
          <% end %>
        </li>
        <li>
          <%= link_to admin_users_path , class:"nav-link text-light" do %>
            <button type="button" class="btn btn-outline-secondary mr-4" style="color: black; font-weight: 600; border-color: #d3d3d3;">投稿一覧</button>
          <% end %>
        </li>
        <li>
          <%=  link_to admin_root_path , class:"nav-link text-light" do %>
            <button type="button" class="btn btn-outline-secondary mr-4" style="color: black; font-weight: 600; border-color: #d3d3d3;">コメント一覧</button>
          <% end %>
        </li>
        <li>
          <%= link_to destroy_admin_session_path, method: :delete, class:"nav-link text-light" do%>
            <button type="button" class="btn btn-outline-secondary mr-5" style="color: black; font-weight: 600; border-color: #d3d3d3;">ログアウト</button>
          <% end %>
        </li>
      </ul>
    </div>

    <% else %>
    <div class="d-flex justify-content-end align-items-center ">
      <ul class="navbar-nav" style="flex-direction: row;">
        <li>
          <%= link_to root_path  , class:"nav-link text-light" do %>
            <button type="button" class="btn btn-outline-secondary mr-4" style="color: black; font-weight: 600; border-color: #d3d3d3;">トップ</button>
          <% end %>
        </li>
        <li>
          <%= link_to about_path, class:"nav-link text-light" do %>
            <button type="button" class="btn btn-outline-secondary mr-4" style="color: black; font-weight: 600; border-color: #d3d3d3;">ご案内</button>
          <% end %>
        </li>
        <li>
          <%= link_to  user_session_path, class:"nav-link text-light"  do %>
            <button type="button" class="btn btn-outline-secondary mr-4" style="color: black; font-weight: 600; border-color: #d3d3d3;">ゲストログイン</button>
          <% end %>
        </li>
        <li>
          <%= link_to new_user_registration_path , class:"nav-link text-light"  do %>
            <button type="button" class="btn btn-outline-secondary mr-4" style="color: black; font-weight: 600; border-color: #d3d3d3;">新規登録</button>
          <% end %>
        </li>
        <li>
          <%= link_to  user_session_path , class:"nav-link text-light"  do %>
            <button type="button" class="btn btn-outline-secondary mr-5" style="color: black; font-weight: 600; border-color: #d3d3d3;">ログイン</button>
          <% end %>
        </li>
      </ul>
    </div>
    <% end %>
  </nav>
</header>