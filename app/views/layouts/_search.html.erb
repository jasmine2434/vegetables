<% if user_signed_in? %>
  <div class="container">
    <div class="row justify-content-end mt-1">
      <%= form_with url: search_path, method: :get, local: true do |f| %>
        <div class="input-group">
          <div class="col-6">
          <%= f.text_field :content, class: "form-control", placeholder: "検索ワードを入力" %>
          </div>
          <div class="col-2">
          <%= f.select :model, options_for_select({"ユーザー" => "user", "投稿" => "vegetable"}), { class: "form-select" } %>
          </div>
          <div class="col-2">
          <%= f.select :method, options_for_select({"完全一致" => "perfect", "部分一致" => "partial"}), { class: "form-select" } %>
          </div>
          <div class="col-2">
            <%= f.submit "検索", class: "btn btn-primary" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
