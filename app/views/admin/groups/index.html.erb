<div style="margin-right: -8px;margin-top: 15px;">
  <%= render "layouts/search" %>
</div>

<div class="container">
  <div class="row">
    <h2 class="col mt-4">グループ一覧確認画面</h2>
  </div>
  <h5 class="row text-center mt-3">
    <table class="table table-striped">
      <thead>
        <tr>
          <th scope="col" style="width: 10%;">画像</th>
          <th scope="col" style="width: 15%;">グループ名</th>
          <th scope="col" style="width: 30%;">紹介文</th>
          <th scope="col" style="width: 10%;">人数</th>
          <th scope="col" style="width: 10%;">削除</th>
        </tr>
      </thead>
      <tbody>
          <% @groups.each do |group| %>
            <tr>
              <td><%= image_tag group.get_group_image(80, 80) %></td>
              <td><%= link_to group.name, admin_group_path(group) %></td>
              <td><%= truncate(group.introduction, length: 15) %></td> <!-- 文字数制限 -->
              <td><%= group.group_users.count %></td>
              <td><%= link_to admin_group_path(group), class: "btn btn-danger", method: :delete, "data-confirm" => "本当に削除しますか？" do %>
                  <i class="fa-solid fa-trash"></i> 削除
                  <% end %>
              </td>
            </tr>
          <% end %>
      </tbody>
    </table>
  </h5>
</div>
