<div class="container">
  <div class="row mt-5">
    <h2 class="title">グループ詳細画面</h2>
  </div>

  <div class="row">
    <div class="col-md-5">
      <h3 class="text-center mt-4">グループ概要</h3>
        <table class="table table-bordered text-center mt-4">
          <tr>
            <td class="text-center" colspan="2">
              <%= "グループ概要" %>
            </td>
          </tr>
          <tr>
            <td class="text-center" colspan="2">
              <%= image_tag @group.get_group_image(100, 100), class: "img-fluid rounded-circle" %>
            </td>
          </tr>
          <tr>
            <td class="col-5 text-center">グループ名</td>
            <td class="text-center"><%= @group.name %></td>
          </tr>
          <tr>
            <td class="col-5 text-center">紹介文</td>
            <td class="text-center"><%= @group.introduction %></td>
          </tr>
          <tr>
            <td class="col-5 text-center">人数</td>
            <td class="text-center"><%= @group.group_users.count %></td>
          </tr>
        </table>

        <div class="col-8 ml-5 mt-3 mb-2 d-flex justify-content-center">
          <%= link_to admin_group_path(@group), class: "btn btn-danger form-control", method: :delete, "data-confirm" => "本当に削除しますか？" do %>
            <i class="fa-solid fa-triangle-exclamation"></i> グループを削除する
          <% end %>
        </div>
      </div>

      <div class="col-md-6 ml-5">
      <h3 class="text-center mt-4">グループメンバー</h3>
      <table class="table table-bordered mt-3 text-center">
        <thead class="thead-light">
          <tr>
            <th scope="col" style="width: 25%;">ユーザー画像</th>
            <th scope="col" style="width: 50%;">ユーザー名</th>
          </tr>
        </thead>
        <tbody>
          <% @group.users.each do |user| %>
            <tr>
              <td><%= image_tag user.get_profile_image(80, 80) %></td>
              <td><%= user.name %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
