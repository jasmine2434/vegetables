<div class="container">
  <h3 class="row mt-5 justify-content-center">
    一覧確認画面
  </h3>
  <div class="row mt-5 justify-content-center">
    <div class="col-md-2 ml-5 mb-4 text-center">
      <%= link_to admin_users_path, class: "btn btn-primary w-100 rounded-circle" do %>
        ユーザー
        <%= image_tag "nouka_man_hatake.png", class: "img-fluid rounded-circle" %>
      <% end %>
    </div>
    <div class="col-md-2 mb-4">
      <%= link_to admin_vegetables_path, class: "btn btn-warning w-100 rounded-circle" do %>
        投稿
        <%= image_tag "food_lettuce.png", class: "img-fluid" %>
      <% end %>
    </div>
    <div class="col-md-2 mb-4">
      <%= link_to admin_groups_path, class: "btn btn-danger w-100 rounded-circle" do %>
        グループ
        <%= image_tag "default_group.png", class: "img-fluid" %>
      <% end %>
    </div>
    <div class="col-md-2 mb-4">
      <%= link_to admin_comments_path, class: "btn btn-secondary w-100 rounded-circle" do %>
        コメント
        <%= image_tag "comment.png", class: "img-fluid" %>
      <% end %>
    </div>
  </div>
  <div class="row mt-4 justify-content-center">
    <div class="col-md-2 mb-4 text-center">
      <%= link_to admin_genres_path, class: "btn btn-success w-100 rounded-circle" do %>
        ジャンル
        <%= image_tag "vegetable.png", class: "img-fluid" %>
      <% end %>
    </div>
  </div>
</div>