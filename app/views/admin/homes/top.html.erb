<div style="margin-right: -8px;margin-top: 15px;">
  <%= render "layouts/search_admin", url: admin_search_path %>
</div>

<div class="container">
  <h2 class="row mt-4">管理者一覧画面</h2>

  <div class="row mt-4 text-center">
    <div class="col-md-3 mb-4">
      <%= link_to admin_users_path, class: "btn btn-primary w-100" do %>
        ユーザー
        <%= image_tag "nouka_man_hatake.png", size: "250x250", class: "img-fluid" %>
      <% end %>
    </div>

    <div class="col-md-3 mb-4">
      <%= link_to admin_vegetables_path, class: "btn btn-warning w-100" do %>
        投稿
        <%= image_tag "food_lettuce.png", size: "250x250", class: "img-fluid" %>
      <% end %>
    </div>

    <div class="col-md-3 mb-4">
      <%= link_to admin_genres_path, class: "btn btn-success w-100" do %>
        ジャンル
        <%= image_tag "vegetable.png", size: "250x250", class: "img-fluid" %>
      <% end %>
    </div>
  </div>

  <div class="row mt-4 text-center">
    <div class="col-md-3 mb-4">
      <%= link_to admin_comments_path, class: "btn btn-secondary w-100" do %>
        コメント
        <%= image_tag "comment.png", size: "250x250", class: "img-fluid" %>
      <% end %>
    </div>

    <div class="col-md-3 mb-4">
      <%= link_to admin_groups_path, class: "btn btn-danger w-100" do %>
        グループ
        <%= image_tag "default_group.png", size: "250x250", class: "img-fluid" %>
      <% end %>
    </div>
  </div>
</div>

