<div class="container">
  <div class="row">
    <h2 class="col mt-4">コメント一覧確認画面</h2>
  </div>
  <div class="row text-center mt-4">
    <table class="table table-striped">
      <thead>
        <tr>
          <th scope="col" style="width: 10%;">コメントユーザー</th>
          <th scope="col" style="width: 15%;">投稿名</th>
          <th scope="col" style="width: 30%;">コメント</th>
          <th scope="col" style="width: 10%;">削除</th>
        </tr>
      </thead>
      <tbody>
        <% @comments.each do |comment| %>
        <tr>
          <td>
            <%= image_tag comment.user.get_profile_image(50, 50) %><br>
            <%= comment.user.name %>
          </td>
          <td><%= comment.vegetable.name %></td>
          <td><%= link_to truncate(comment.body, length: 30), admin_comment_path(comment.vegetable_id) %>
          <td>
            <%= link_to admin_comment_path(comment.id), class: "btn btn-danger", method: :delete, "data-confirm" => "本当に削除しますか？" do %>
              <i class="fa-solid fa-trash"></i> 削除
            <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
