<div style="margin-right: -8px;margin-top: 15px;">
  <%= render "layouts/search_admin", url: admin_search_path %>
</div>

<div class="container">
  <div class="row justify-content-center mt-3">
    <h2>コメント一覧確認画面</h2>
  </div>
  <div class="row text-center mt-4">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th scope="col" style="width: 10%;">コメントユーザー</th>
          <th scope="col" style="width: 15%;">投稿名</th>
          <th scope="col" style="width: 30%;">コメント</th>
          <th scope="col" style="width: 10%;">削除</th>
        </tr>
      </thead>
      <tbody>
        <% @comments.each do |comment| %>
        <tr>
          <td>
            <%= image_tag comment.user.get_profile_image(50, 50) %><br>
            <%= comment.user.name %>
          </td>
          <td><%= comment.vegetable.name %></td>
          <td>
            <%= link_to truncate(comment.body, length: 30), admin_comment_path(comment.vegetable_id) %>
          </td>
          <td>
            <%= link_to admin_comment_path(comment.id), class: "btn btn-danger", method: :delete, "data-confirm" => "本当に削除しますか？" do %>
              <i class="fa-solid fa-triangle-exclamation"></i> 削除
            <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <div class="pagetop">
      <a href="#" class="pagetop__link">
        <span class="pagetop__text">TOP</span>
      </a>
    </div>
  </div>
</div>
