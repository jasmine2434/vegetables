<div style="margin-right: -8px;margin-top: 15px;">
  <%= render "layouts/search_admin", url: admin_search_path %>
</div>

<div class="container">
  <div class="row">
    <h2 class="col mt-4">投稿一覧確認画面</h2>
  </div>
  <div class="row text-center mt-4">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th scope="col" style="width: 15%;">ユーザー名</th>
          <th scope="col" style="width: 10%;">画像</th>
          <th scope="col" style="width: 15%;">投稿名</th>
          <th scope="col" style="width: 10%;">ジャンル</th>
          <th scope="col" style="width: 40%;">説明文</th>
          <th scope="col" style="width: 10%;">削除</th>
        </tr>
      </thead>
      <tbody>
        <% @vegetables.each do |vegetable| %>
          <tr>
            <td>
              <%= link_to vegetable.user.name, admin_user_path(vegetable.user_id) %></td>
            <td><%= image_tag vegetable.get_image(50, 50) %></td>
            <td><%= link_to vegetable.name, admin_vegetable_path(vegetable.id) %></td>
            <td><%= vegetable.genre.name %></td>
            <td><%= truncate(vegetable.body, length: 20) %></td> <!-- 文字数制限 -->
            <td><%= link_to admin_vegetable_path(vegetable), class: "btn btn-danger", method: :delete, "data-confirm" => "本当に削除しますか？" do %>
                  <i class="fa-solid fa-trash"></i> 退会
                  <% end %>
              </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="pagetop">
      <a href="#" class="pagetop__link">
        <span class="pagetop__text">TOP</span>
      </a>
    </div>
  </div>
</div>
