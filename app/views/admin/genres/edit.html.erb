<div class="container">
    <% if @genre.errors.any? %>
  <%= @genre.errors.count %>件のエラーが発生しました
  <ul>
    <% @genre.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
  <% end %>

  <div class="row mt-5">
    <h2 class="title text-center mt-4">ジャンル編集画面</h2>
  </div>

  <%= form_with model: [:admin, @genre] do |f| %>
    <div class="row">
      <div class="col-md-10">
        <div class="row">
          <div class="col-3"></div>
          <h5 class="col-3">名前</h5>
          <div class="col-4">
            <%= f.text_field :name %>
          </div>
        </div>
      </div>
    </div>

    <div class="row mt-5">
      <div class="col-3"></div>
      <div class="col-md-3">
        <%= button_tag(type: 'submit', class: "btn btn-primary w-100") do %>
          <i class="fa-solid fa-arrows-rotate"></i> 更新する
        <% end %>
      </div>
    </div>
  <% end %>
</div>
