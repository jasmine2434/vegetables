<div class="container">
  <div class="row mt-5">
    <h2 class="title">グループ編集画面</h2>
  </div>

  <%= form_with model: @group, url: group_path, local: true  do |f| %>
    <div class="row mt-4">
      <div class="col-md-4">
        <!-- 左側：画像 -->
        <%= image_tag @group.get_group_image(150, 150), class: "img-fluid mb-3" %>
        <%= f.file_field :image %>
      </div>

      <div class="col-md-6">
        <!-- 右側：名前と紹介文 -->
        <div class="form-group">
          <h5>名前</h5>
          <%= f.text_field :name, class: "form-control" %>
        </div>

        <div class="form-group mt-4">
          <h5>紹介文</h5>
          <%= f.text_area :introduction, rows: 5, class: "form-control" %>
        </div>
      </div>
    </div>

    <div class="row mt-5 d-flex justify-content-between">
      <div class="col-md-3">
        <%= link_to group_path(@group.id), class: "btn btn-success w-100" do %>
          <i class="fa-solid fa-delete-left"></i> 戻る
        <% end %>
      </div>

      <div class="col-md-3">
        <%= button_tag(type: 'submit', class: 'btn btn-primary btn-block w-100') do %>
          <i class="fa-solid fa-arrows-rotate"></i> 更新する
        <% end %>
      </div>

      <div class="col-md-3">
        <%= link_to group_path(@group.id), class: "btn btn-danger w-100", method: :delete, "data-confirm" => "本当に削除しますか？" do %>
          <i class="fa-solid fa-trash"></i> 削除
        <% end %>
      </div>
    </div>
  <% end %>
</div>
