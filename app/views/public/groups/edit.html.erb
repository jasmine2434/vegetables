<div class="container">
  <div class="row">
    <h2 class="title text-center mt-4">グループ編集画面</h2>
  </div>

  <%= form_with model: @group, url: group_path, local: true  do |f| %>
    <div class="row">
      <div class="col-md-2 text-center">
        <%= image_tag @group.get_group_image(150, 150), class: "img-fluid" %>
        <%= f.file_field :image %>
      </div>

      <div class="col-md-10">
        <div class="row">
          <div class="col-3"></div>
          <h5 class="col-3">名前</h5>
          <div class="col-4">
            <%= f.text_field :name %>
          </div>
        </div>

        <div class="row">
          <div class="col-3"></div>
          <h5 class="col-3">紹介文</h5>
        </div>

        <div class="row">
          <div class="col-3"></div>
          <div class="col-md-8">
            <%= f.text_area :introduction, rows: 10, style: "width: 100%", class: "form-control" %>
          </div>
        </div>
      </div>
    </div>

    <div class="row mt-5 d-flex justify-content-between">
      <div class="col-md-3">
        <%= link_to group_path(@group.id), class: "btn btn-success w-100" do %>
          <i class="fa-solid fa-delete-left"></i> 戻る
        <% end %>
      </div>

      <div class="col-md-3">
        <%= f.submit "更新する", class: "btn btn-primary w-100" do %>
          <i class="fa-solid fa-arrows-rotate"></i>
        <% end %>
      </div>
      <div class="col-md-3">
        <%= link_to group_path(@group.id), class: "btn btn-danger w-100", method: :delete, "data-confirm" => "本当に削除しますか？" do %>
          <i class="fa-solid fa-trash"></i> 削除
        <% end %>
      </div>
    </div>
  <% end %>
</div>
