<div class="container">
  <div class="row mt-5">
      <h2 class="title">グループ作成</h2>
  </div>

  <div class="row">
    <div class="col-md-4 mt-4">
      <table class="table table-bordered text-center mt-4">
        <tr>
          <td class="text-center" colspan="2">
            <%= image_tag @user.get_profile_image(150, 150), class: "img-fluid rounded-circle" %>
          </td>
        </tr>
        <tr>
          <td class="col-5 text-center">ユーザー名</td>
          <td class="text-center"><%= @user.name %></td>
        </tr>
        <tr>
          <td class="col-5 text-center">紹介文</td>
          <td class="text-center"><%= @user.introduction %></td>
        </tr>
      </table>
    </div>
    <!-- グループ作成フォーム -->
    <div class="col-md-8 mt-5">
      <%= form_with model: @group, url: groups_path, local: true do |f| %>
        <div class="row">
          <div class="col-5">
          <%= f.label :name, "名前" %>
          <%= f.text_field :name, class: "form-control", autofocus: true, autocomplete: "name" %>
          </div>
        </div>

        <div class="row mt-3">
          <div class="col-5">
          <%= f.label :group_image, "グループ画像" %>
          <%= f.file_field :group_image, accept: "image/*", class: "form-control-file" %>
          </div>
        </div>

        <div class="row mt-3">
          <div class="col-md-8">
            <%= f.label :introduction, "紹介文" %>
            <%= f.text_area :introduction, class: "form-control", rows: 4, autocomplete: "name" %>
          </div>
        </div>

        <!-- グループ作成ボタン -->
        <div class="row mt-3">
          <div class="col-md-8 text-center">
            <%= f.submit "作成する", class: "btn btn-primary" do %>
            <i class="fa-solid fa-arrows-rotate"></i>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
