<div class="container">
  <div class="row mt-5">
    <h2 class="title">グループ詳細画面</h2>
  </div>

  <div class="row">
    <div class="col-md-3 mt-4">
      <table class="table table-bordered text-center mt-4">
        <tr>
          <td class="text-center" colspan="2">
            <%= "ログインユーザー" %>
          </td>
        </tr>
        <tr>
          <td class="text-center" colspan="2">
            <%= image_tag @user.get_profile_image(150, 150), class: "img-fluid rounded-circle" %>
          </td>
        </tr>
        <tr>
          <td class="col-5 text-center">ユーザー名</td>
          <td class="text-center"><%= @user.name %></td>
        </tr>
        <tr>
          <td class="col-5 text-center">紹介文</td>
          <td class="text-center"><%= @user.introduction %></td>
        </tr>
      </table>

      <div class="mt-4">
        <% if @group.is_owned_by?(current_user) %>
          <%= link_to "グループを編集する", edit_group_path(@group), class: "btn btn-sm btn-warning btn-block" %>
        <% end %>
      </div>

      <div class="mt-4">
        <% if @group.users.include?(current_user) %>
          <%= link_to '参加済み', '#', class: "btn btn-sm btn-secondary btn-block", disabled: true %>
        <% else %>
          <%= link_to 'グループに参加する', group_group_users_path(@group), method: :post, class: "btn btn-sm btn-primary btn-block" %>
        <% end %>
      </div>
    </div>

    <div class="col-md-9">
      <h3 class="text-center mt-4">グループ概要</h3>
      <table class="table table-bordered mt-3 text-center">
        <thead class="thead-light">
          <tr>
            <th scope="col" style="width: 15%;">グループ画像</th>
            <th scope="col" style="width: 25%;">グループ名</th>
            <th scope="col" style="width: 50%;">紹介文</th>
            <th scope="col" style="width: 15%;">人数</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= image_tag @group.get_group_image(80, 80) %></td>
            <td><%= @group.name %></td>
            <td><%= @group.introduction %></td>
            <td><%= @group.group_users.count %></td>
          </tr>
        </tbody>
      </table>

      <h3 class="text-center mt-4">グループメンバー</h3>
      <table class="table table-bordered mt-3 text-center">
        <thead class="thead-light">
          <tr>
            <th scope="col" style="width: 15%;">ユーザー画像</th>
            <th scope="col" style="width: 55%;">ユーザー名</th>
            <th scope="col" style="width: 15%;">ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @group.users.each do |user| %>
            <tr>
              <td><%= image_tag user.get_profile_image(80, 80) %></td>
              <td><%= user.name %></td>
              <td>
                <% if @group.is_owned_by?(current_user) %>
                  <%= link_to '辞めさせる', group_group_users_path(@group, user_id: user.id), method: :delete, class: "btn btn-sm btn-danger" %>
                <% elsif current_user == user #&& @group.includesUser?(current_user) %>
                  <%= link_to 'やめる', group_group_users_path(@group, user_id: current_user.id), method: :delete, class: "btn btn-sm btn-danger" %>
                <%# elsif current_user == user && !@group.includesUser?(current_user) %>
                  <%#= link_to '参加', group_group_users_path(@group), method: :post, class: "btn btn-sm btn-success" %>
                <% else %>
                  <div class="btn btn-sm btn-info">参加中</div>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
