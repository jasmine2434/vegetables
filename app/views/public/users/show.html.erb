<div class="container">
  <div class="row mt-5">
    <h2 class="title">ユーザー画面</h2>
  </div>

  <div class="row">
    <div class="col-md-3 mt-4">
      <%= render "public/users/profile", user: @user %>
        <!--ログインしているユーザーのみボタンを表示 -->
      <% if @user == current_user %>
        <div class="mt-5">
            <%= link_to edit_user_path(@user), class: "btn btn-success form-control" do%>
            <i class="fa-solid fa-user-gear"></i>プロフィール編集
            <% end %>
        </div>

        <div class="mt-4">
          <%= link_to new_vegetable_path, class: "btn btn-primary btn-block" do %>
            <i class="fa-solid fa-pen"></i> 新規投稿
          <% end %>
        </div>
      <% end %>
        <div class="mt-4">
        <%= link_to groups_path(@user), class: "btn btn-secondary btn-block" do %>
          <i class="fa-solid fa-user-group"></i> グループ
        <% end %>
      </div>
    </div>
     <!-- 投稿一覧 -->
    <div class="col-md-8 ml-5">
      <h3 class="text-center mt-4">投稿一覧</h3>
      <table class="table table-bordered mt-3 text-center">
        <thead class="thead-light">
          <tr>
            <th scope="col" style="width: 15%;">画像</th>
            <th scope="col" style="width: 35%;">名前</th>
            <th scope="col" style="width: 20%;">ジャンル</th>
            <th scope="col" style="width: 15%;">いいね数</th>
            <th scope="col" style="width: 15%;">コメント数</th>
          </tr>
        </thead>
        <tbody>
          <% @vegetables.each do |vege| %>
            <tr>
              <td><%= image_tag vege.get_image(80, 80) %></td>
              <td>
                <%= link_to vege.name, vegetable_path(vege.id) %>
              </td>
              <td><%= vege.genre.name %></td>
              <td class="text-center"><%= vege.favorites.count %></td>
              <td class="text-center"><%= vege.comments.count %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>































