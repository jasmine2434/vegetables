    <div class="container">
      <div class="row">
        <h2 class="col-5 mt-5">ユーザーページ</h2>
        <h4 class="col-7 mt-5">ユーザー名 "<%= @user.name %>" さん</h4>
      </div>
      <div class="row">
        <div class="col-md-3">
            <div class="text-center mt-4"><%= image_tag @user.get_profile_image(150,150), class: "rounded-circle" %></div>
              <% if @user == current_user %>
          <div class="row mt-5">
              <%= link_to edit_user_path(@user), class: "btn btn-success form-control" do%>
              <i class="fa-solid fa-user-gear"></i>プロフィール編集
              <% end %>
          </div>
              <% end %>
            <div class="row mt-5">
              <%= link_to new_vegetable_path, class: "btn btn-success form-control" do%>
                <i class="fa-solid fa-pen">新規投稿</i>
              <% end %>
            </div>

            <h5 class="row mt-5">グループ一覧</h5>

        </div>

      <div class="col-md-8 mt-2 offset-md-1">
        <h2>投稿一覧</h2>
        <table class="table">
          <thead class="thead-light text-center">
            <tr>
              <th scope="col">画像</th>
              <th scope="col">名前</th>
              <th scope="col">ジャンル</th>
              <th scope="col">いいね数</th>
              <th scope="col">コメント数</th>
            </tr>
          </thead>
          <tbody>
            <% @vegetables.each do |vege| %>
            <tr>
              <td class="text-center"><%= image_tag vege.get_image(100, 100) %></td>
              <td class="text-center"><%= link_to vegetable_path(vege.id) do %>
                    <%= vege.name %>
                  <% end %>
              </td>
              <td class="text-center"><%= vege.genre.name %></td>
              <td class="text-center">
                <% if vege.favorited_by?(current_user) %>
                  <%= link_to "❤ #{vege.favorites.count}", vegetable_favorite_path(vege), method: :delete, data: { confirm: "この野菜のいいねを外しますか？" }, class: "text-danger" %>
                <% else %>
                  <%= link_to "♡ #{vege.favorites.count}", vegetable_favorite_path(vege), method: :post, class: "text-muted" %>
                <% end %>
              </td>
              <td class="text-center"><%= vege.comments.count %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
    </div>
  </div>
</div>
