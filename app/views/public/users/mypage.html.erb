    <div class="container">
      <h1>マイページ</h1>
      <div class="row">
        <div class="col-md-4">
          <div class="row">
            <h4 class="col-5">ユーザー名</h4>
            <h4 class="col-4"><%= @user.name %></h4>
          </div>
            <div><%= image_tag @user.get_profile_image(100,100) %></div>
              <% unless @user.guest_user? %>
          <div class="row mt-5">
              <%= link_to edit_user_path(@user.id), class: "btn btn-success form-control" do%>
              <i class="fa-solid fa-user-gear"></i>プロフィール編集
              <% end %>
          </div>
              <% end %>

            <div class="row mt-5">
              <%= link_to new_vegetable_path, class: "btn btn-success form-control" do%>
                <i class="fa-solid fa-pen">新規投稿</i>
              <% end %>
            </div>

            <h5 class="row mt-5">仮グループ一覧</h5>

        </div>

      <div class="col-md-7 offset-md-1">
        <h2>投稿一覧</h2>

        <table class="table">
          <thead>
            <tr>
              <th scope="col"></th>
              <th scope="col">野菜画像</th>
              <th scope="col">野菜名</th>
              <th scope="col">いいね</th>
              <th scope="col">コメント数</th>
            </tr>
          </thead>
          <tbody>
            <% @vegetables.each do |vege| %>
            <tr>
              <th scope="row"></th>
              <td><%= image_tag vege.get_image(100, 100) %></td>
              <td><%= link_to vegetable_path(vege.id) do %>
                  <%= vege.vege_name %>
                  <% end %>
              </td>
              <% if book.favorited_by?(current_user) %>
              <td>
                <%= link_to book_favorite_path(book), method: :delete do %>
                  ♥<%= book.favorites.count %>
                <% end %>
              </td>
              <% else %>
              <td>
                <%= link_to book_favorite_path(book), method: :post do %>
                  ♡<%= book.favorites.count %>
                <% end %>
              </td>
              <% end %>
              <td>仮コメント数</td>
            </tr>
            <% end %>
          </tbody>
        </table>
    </div>
  </div>
</div>
