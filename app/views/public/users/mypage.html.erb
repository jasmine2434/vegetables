<div class="container">
  <div class="row">
    <div class="col-md-4 mt-4">
      <h1>マイページ</h1>
      <table class="table table-bordered text-center mt-4">
        <tr>
          <td class="text-center" colspan="2">
            <%= image_tag @user.get_profile_image(150, 150), class: "img-fluid rounded-circle" %>
          </td>
        </tr>
        <tr>
          <td class="col-5 text-center">ユーザー名</td>
          <td class="text-center"><%= @user.name %></td>
        </tr>

      </table>

      <% if @user.email != "guest@example.com" %>
        <div class="mt-4">
          <%= link_to edit_user_path(@user.id), class: "btn btn-warning btn-block" do %>
            <i class="fa-solid fa-user-gear"></i> プロフィール編集
          <% end %>
        </div>
      <% end %>

      <div class="mt-4">
        <%= link_to new_vegetable_path, class: "btn btn-primary btn-block" do %>
          <i class="fa-solid fa-pen"></i> 新規投稿
        <% end %>
      </div>
    </div>

    <div class="col-md-7 ml-5"> <!-- 投稿一覧 -->
      <h2 class="text-center mt-4">投稿一覧</h2>
      <table class="table table-bordered mt-3 text-center">
        <thead class="thead-light">
          <tr>
            <th scope="col" style="width: 15%;">画像</th>
            <th scope="col" style="width: 30%;">名前</th>
            <th scope="col" style="width: 20%;">ジャンル</th>
            <th scope="col" style="width: 15%;">いいね数</th>
            <th scope="col" style="width: 25%;">コメント数</th>
          </tr>
        </thead>
        <tbody>
          <% @vegetables.each do |vege| %>
            <tr>
              <td><%= image_tag vege.get_image(100, 100) %></td>
              <td>
                <%= link_to vege.name, vegetable_path(vege.id) %>
              </td>
              <td><%= vege.genre.name %></td>
              <td class="text-center"><%= vege.favorites.count %></td>
              <td class="text-center"><%= vege.comments.count %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
