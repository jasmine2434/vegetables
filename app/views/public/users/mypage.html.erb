
 <p class="notice"><%= notice %></p>

    <div class="container">
      <h1>マイページ</h1>
      <div class="row">
        <div class="col-md-3">
          <h3>ユーザー情報</h3>
          <div>ユーザー名</div>
          <div><%= @user.name %></div>
          <div><%= image_tag @user.get_profile_image(100,100) %></div>
        </div>
      </div>
      
        <div class="row">
          <%= link_to "プロフィール編集", 
          public_users_edit_path(@user.id), class: "btn btn-success form-control" %>
            <i class="fa-solid fa-user-gear"></i>
        </div>
        
        <div class="row">
          <%= link_to "新規投稿", root_path, class: "btn btn-success" %>
        </div>
        </div>
        
        
      <div class="col-md-8 offset-md-1">

<h1>Books</h1>

  <div class="table">
    <table>
      <tr>
        <th></th>
        <th>野菜名</th>
        <th>説明文</th>
      </tr>

      <% @posts.each do |post| %>
      <tr>
        <td><%= link_to user_path(post.user.id) do %>
          <%= image_tag post.user.get_profile_image(100,100)  %>
          <% end %></td>
        <td><%= link_to post_path(post.id) do %>
          <%= post.vege_name %>
          <% end %>
        <td><%= post.body %></td>
          
          
          
          <% if post.favorited_by?(current_user) %>
                <td>
                  <%= link_to post_favorite_path(post), method: :delete do %>
                    ♥<%= post.favorites.count %>
                  <% end %>
                </td>
                <% else %>
                <td>
                  <%= link_to book_favorite_path(post), method: :post do %>
                    ♡<%= post.favorites.count %>
                  <% end %>
                </td>
              <% end %>
          
          
      </tr>
      <% end %>
    </table>
  </div>
</div>
</div>
</div>
