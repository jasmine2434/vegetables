<div class="main-bg custom-background h-100">
  <div class="container pt-5">
    <% if @user.errors.any? %>
    <%= @user.errors.count %>件のエラーが発生しました
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
    <% end %>
    <div class="row justify-content-center">
      <h2>プロフィール編集画面</h2>
    </div>
      <%= form_with model: @user do |f| %>
      <div class="row justify-content-center">
        <!-- プロフィール画像 -->
        <div class="col-md-5 mt-4 text-center">
          <div class="form-group">
            <label for="inputImage" class="form-label">プロフィール画像</label>
            <div class="col-md-12 mt-4 text-center">
              <%= image_tag @user.get_profile_image(150, 150), class: "img-fluid rounded-circle mx-auto d-block" %>
            </div>
            <div class="col-md-12 mt-4">
              <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*", class: "form-control" %>
            </div>
          </div>
        </div>
        <!-- 名前・メール -->
        <div class="col-md-5 offset-md-1">
          <div class="form-group mt-4">
            <label for="inputName" class="form-label">名前</label>
            <%= f.text_field :name, autofocus: true, id: "inputName", placeholder: "2文字以上10文字以内", class: "form-control" %>
          </div>
          <div class="form-group pt-4">
            <label for="inputintroduction" class="form-label">紹介文</label>
            <%= f.text_area :introduction, placeholder: "20文字以内", class: "form-control" %>
          </div>
          <div class="form-group pt-3">
            <label for="inputEmail" class="form-label">メールアドレス</label>
            <%= f.text_field :email, id: "inputEmail", placeholder: "メールアドレス", class: "form-control" %>
          </div>
          <div class="form-group pt-4">
            <%= button_tag(type: 'submit', class: 'btn btn-primary btn-block w-100') do %>
              <i class="fa-solid fa-arrows-rotate"></i> 更新する
            <% end %>
          </div>
           <!-- 退会ボタン -->
          <div class="row justify-content-end pt-5">
            <div class="col-md-4 mb-5 text-center">
              <%= link_to "退会する", user_path(current_user), method: :delete, class: "btn btn-danger btn-block w-100", "data-confirm" => "本当に退会しますか？" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>