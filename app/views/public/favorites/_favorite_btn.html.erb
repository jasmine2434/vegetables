<% if vegetable.favorited_by?(current_user) %>
  <%= link_to "❤ #{vegetable.favorites.count}", vegetable_favorite_path(vegetable), method: :delete, remote: true, class: "text-danger" %>
<% else %>
  <%= link_to "♡ #{vegetable.favorites.count}", vegetable_favorite_path(vegetable), method: :post, remote: true, class: "text-primary" %>
<% end %>