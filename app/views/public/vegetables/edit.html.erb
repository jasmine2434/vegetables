<div class="container">
  <div class="row">
    <h2 class="title text-center mt-4">野菜投稿Editページ</h2>
  </div>

  <div class="row mt-5">
    <div class="col-md-2 text-center">
      <%= form_with model: @vegetable do |f| %>
      <%= f.file_field :image %>
    </div>

    <div class="col-md-10">
      <div class="row mb-3">
        <div class="col-3"></div>
        <h5 class="col-3">野菜名</h5>
        <h5 class="col-4"><%= f.text_field :vege_name %></5>
      </div>

      <div class="row mb-3">
        <div class="col-3"></div>
        <h5 class="col-3">ジャンル</h5>
        <div class="col-4"><%= f.select :genre_id, options_from_collection_for_select(@genres, :id, :name), { include_blank: '選択してください' }, class: "form-control fs-4" %>
        </div>
      </div>

      <div class="row mb-4">
       
        <h5 class="col-3">説明文</h5>
        <h5 class="col-md-8"><%= f.text_area :body %></h5>
      </div>
    </div>
  </div>

  <div class="row mt-5">
    <div class="col-md-3">
      <%= link_to vegetable_path(@vegetable.id), class: "btn btn-success form-control" do %>
        <i class="fa-solid fa-delete-left"></i> 戻る
      <% end %>
    </div>

    <div class="col-md-3">
      <%= f.submit "更新する", method: :update, class: "btn btn-secondary" %>
    <% end %>
    </div>
  </div>
</div>

