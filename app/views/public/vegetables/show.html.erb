<div class="container">
  <div class="row">
    <h2 class="title text-center mt-4">投稿詳細画面</h2>
  </div>
  <!-- ユーザー名表示 -->
  <div class="row mb-3 align-items-center">
    <h4 class="col-md-2">ユーザー名</h4>
    <h4 class="col-md-8">
      <%= link_to user_path(@vegetable.user) do %>
        "<%= @vegetable.user.name %>"さん
      <% end %>
    </h4>
  </div>

  <!-- プロフィール画像と野菜情報 -->
  <div class="row mb-3">
    <!-- プロフィール画像 -->
    <div class="col-md-2 text-center">
      <%= image_tag @vegetable.user.get_profile_image(250, 250), class: "img-fluid rounded-circle" %>
    </div>

    <!-- 野菜画像 -->
    <div class="col-md-2 ml-5 text-center">
      <%= image_tag @vegetable.get_image(150, 150), class: "img-fluid" %>
    </div>

    <!-- 野菜情報 -->
    <div class="col-md-7">
      <div class="row mb-2 ml-4">
        <h4 class="col-md-3">名前</h4>
        <h4 class="col-md-9"><%= @vegetable.name %></h4>
      </div>

      <div class="row mb-2 ml-4">
        <h4 class="col-md-3">ジャンル</h4>
        <h4 class="col-md-9"><%= @vegetable.genre.name %></h4>
      </div>

      <div class="row ml-4">
        <h4 class="col-md-3">説明文</h4>
        <h4 class="col-md-9"><%= @vegetable.body %></h4>
      </div>
    </div>
  </div>


  <!-- 遷移ボタン -->
  <div class="row mt-5">
    <div class="col-md-3">
      <%= link_to vegetables_path, class: "btn btn-success form-control" do %>
        <i class="fa-regular fa-comment"></i> 投稿一覧
      <% end %>
    </div>
    <% if @user == current_user %>
    <div class="col-md-3">
      <%= link_to edit_vegetable_path(@vegetable.id), class: "btn btn-warning form-control" do %>
        <i class="fa-regular fa-pen-to-square"></i> 投稿編集・削除
      <% end %>
    </div>
    <div class="col-md-3">
      <%= link_to root_path, class: "btn btn-info form-control" do %>
        <i class="fa-regular fa-comment"></i> コメント
      <% end %>
    </div>
    <% end %>
  </div>
</div>

